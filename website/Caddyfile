:{$PORT:80} {
	root * /srv
	encode gzip

	# Serve static assets directly (no SPA fallback)
	@assets path /assets/*
	handle @assets {
		file_server
	}

	# Everything else: try the file, then fall back to index.html
	handle {
		try_files {path} /index.html
		file_server
	}

	# Cache static assets
	@static {
		path *.html *.css *.js *.svg *.png *.jpg *.jpeg *.gif *.ico *.woff *.woff2
	}
	header @static Cache-Control "public, max-age=3600"

	# Security headers
	header {
		X-Content-Type-Options "nosniff"
		X-Frame-Options "DENY"
		Referrer-Policy "strict-origin-when-cross-origin"
	}

	log {
		output stdout
	}
}
